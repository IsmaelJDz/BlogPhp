{% extends "layout.twig" %}
{% block content %}
<h2>New Post</h2>
<p>
    <a class="btn btn-default" href="{{'admin/posts' | url }}">Back</a>
</p>

    {% if result %}
        <div class="alert alert-success">Post Saved</div>
    {% endif %}

    <form method="post">
        <div class="form-group">
            <label for="inputTitle">Title</label>
            <input type="text" class="form-control" name="title" id="inputTitle" required>
        </div>

        <textarea name="content" class="form-control" rows="8" cols="80" id="inputContent" required></textarea></br>

        <input class="btn btn-primary" type="submit" value="Save">
    </form>
{% endblock %}
